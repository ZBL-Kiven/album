<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1px"
        tools:layout_height="match_parent">

    <com.zj.album.ui.views.SquareImageView
            android:id="@+id/graph_item_iv_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"/>

    <View
            android:id="@+id/graph_item_v_selected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5000"
            android:visibility="gone"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="6dp"
            android:layout_gravity="bottom"
            android:background="@drawable/photo_bottom_slide_bar"/>

    <TextView
            android:id="@+id/graph_item_tv_original"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:visibility="gone"
            android:text="@string/pg_str_full_images_tip"
            android:textSize="14sp"
            android:textColor="@drawable/photo_item_tc_original"
            android:background="@drawable/photo_item_bg_original"
            android:layout_height="wrap_content"/>

    <View
            android:id="@+id/graph_item_btn_num"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|bottom"/>

    <TextView
            android:id="@+id/graph_item_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="3dp"
            android:minWidth="24dp"
            android:minHeight="24dp"
            android:gravity="center"
            android:textColor="@color/darkBlueGrey"
            android:textSize="@dimen/x_small_text_size"/>

    <TextView
            android:id="@+id/graph_item_tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="3dp"
            android:drawableStart="@mipmap/ic_video_type"
            android:drawablePadding="2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/x_small_text_size"/>


</FrameLayout>