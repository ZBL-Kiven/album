<resources>

    <declare-styleable name="BaseLoadingView">
        <attr name="backgroundFill" format="color" />
        <attr name="backgroundOnAct" format="color" />
        <attr name="loadingRes" format="reference" />
        <attr name="noDataRes" format="reference" />
        <attr name="noNetworkRes" format="reference" />
        <attr name="hintColor" format="color|reference" />
        <attr name="refreshTextColor" format="color|reference" />
    </declare-styleable>

    <style name="mProgress_circle">
        <!--<item name="android:indeterminateDrawable">@drawable/progressbar_loading</item>-->
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:maxHeight">100dp</item>
    </style>

    <style name="photo_mProgress_circle">
        <item name="android:indeterminateDrawable">@drawable/loading_progressbar</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:maxHeight">100dp</item>
    </style>

    <!--view base line style-->
    <style name="photo_BaseLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#ddd</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="photo_AnimationFade">
        <item name="android:windowEnterAnimation">@anim/photo_pop_alpha_enter</item>
        <item name="android:windowExitAnimation">@anim/photo_pop_alpha_exit</item>
    </style>

</resources>
