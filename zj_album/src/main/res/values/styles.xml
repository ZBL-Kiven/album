<resources>

    <!-- Base application theme. -->
    <style name="photo_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/photo_colorPrimary</item>
        <item name="colorPrimaryDark">@color/photo_colorPrimaryDark</item>
        <item name="colorAccent">@color/photo_colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="photo_mProgress_circle">
        <item name="android:indeterminateDrawable">@drawable/photo_progressbar_loading</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:maxHeight">100dp</item>
    </style>

    <!--view base line style-->
    <style name="photo_BaseLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#ddd</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="photo_AnimationFade">
        <item name="android:windowEnterAnimation">@anim/photo_pop_alpha_enter</item>
        <item name="android:windowExitAnimation">@anim/photo_pop_alpha_exit</item>
    </style>

</resources>
