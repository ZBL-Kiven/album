<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:mContext=".graphy.activity.FolderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/darkBlueGrey">

        <TextView
            android:id="@+id/folder_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sun_toolbar_margin"
            android:layout_marginRight="@dimen/sun_toolbar_margin"
            android:padding="@dimen/sun_toolbar_padding"
            android:text="@string/pg_str_cancel"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:src="@mipmap/ic_sun_people" />
    </RelativeLayout>

    <ListView
        android:id="@+id/pop_lvFile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="#fff"
        android:clipToPadding="false"
        android:divider="@null"
        android:overScrollMode="never"
        android:scrollbars="none"
        tools:listitem="@layout/item_pop_choosefile" />
</LinearLayout>